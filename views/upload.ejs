    <script>
      function checkFileExt(fileUploaded) {
        const control = document.getElementById("imageUpload");
        const filelength = control.files.length;

        for (const file of control.files) {
          const fileName = file.name;
          const fileExt = fileName.substr(fileName.lastIndexOf('.') + 1);
          if ((fileExt.toUpperCase() != "JPG" && fileExt.toUpperCase() != 'JPEG')) {
